{
  "name": "@shuji-bonji/rxjs-mcp",
  "version": "0.1.0",
  "description": "RxJS MCP Server - Execute, debug, and visualize RxJS streams for AI assistants",
  "keywords": [
    "mcp",
    "rxjs",
    "reactive",
    "observable",
    "stream",
    "angular"
  ],
  "author": "Shuji Bonji",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rxjs-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mcp": "node test-mcp-server.mjs",
    "test:inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "rxjs": "^7.8.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuji-bonji/rxjs-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/shuji-bonji/rxjs-mcp-server/issues"
  },
  "homepage": "https://github.com/shuji-bonji/rxjs-mcp-server#readme"
}
